<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h2 class="col-6 offset-3">SignUp on StayNest</h2>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" class="form-control" required><!-- title is a key of the object listing -->
                <div class="invalid-feedback">
                    Username shouldn't be blank!
                </div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">E-mail Id</label>
                <input name="email" id="email" type="email" class="form-control" required><!-- title is a key of the object listing -->
                <div class="invalid-feedback">
                    E-mail Id shouldn't be blank!
                </div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" class="form-control" required><!-- title is a key of the object listing -->
                <div class="invalid-feedback">
                    Password shouldn't be blank!
                </div>
            </div>

            <button class="btn btn-success mt-2">SignUp</button>

        </form>
    </div>
</div>